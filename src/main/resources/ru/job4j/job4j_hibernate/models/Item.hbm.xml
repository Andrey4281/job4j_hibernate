<?xml version = "1.0" encoding = "utf-8"?>

<hibernate-mapping>
    <class name = "ru.job4j.job4j_hibernate.models.Item" table = "items">

        <id name = "id" column = "id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>

        <property name = "desc" column = "description" type="java.lang.String"/>
        <property name = "created" column = "created" type="java.sql.Timestamp"/>
        <property name="done" column="done" type="java.lang.Boolean"/>

    </class>
</hibernate-mapping>